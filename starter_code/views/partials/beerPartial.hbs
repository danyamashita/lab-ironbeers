<div class="beer">
  <img class="beer-img" src="{{this.image_url}}" alt="Card image cap" height = "300" width = "150">
  <div class="beer-body">
    <h3 class="beer-title">{{this.name}}</h3>
    <h4 class="beer-tagline">{{this.tagline}}</h4>
    <p class="beer-text">{{this.description}}</p>
  </div>
</div>